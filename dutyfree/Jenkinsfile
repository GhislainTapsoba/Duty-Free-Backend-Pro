pipeline {
    agent any

    tools {
        maven 'Maven 3.9'
        jdk 'JDK 17'
    }

    environment {
        DOCKER_REGISTRY = 'docker.io'
        DOCKER_IMAGE = 'djbc/duty-free-backend'
        SONAR_HOST_URL = 'https://sonarcloud.io'
        MAVEN_OPTS = '-Dmaven.repo.local=.m2/repository'
        // Credentials IDs used by Jenkins (configure them in Jenkins Credentials)
        DOCKER_CREDENTIALS_ID = 'docker-credentials'
        SSH_STAGING_CRED = 'ssh-staging-credentials'
        SSH_PROD_CRED = 'ssh-prod-credentials'
        SLACK_CRED = 'slack-webhook' // if using slack plugin or webhook
        ODC_INSTALL = 'OWASP Dependency Check' // if using plugin
    }

    options {
        timeout(time: 1, unit: 'HOURS')
        buildDiscarder(logRotator(numToKeepStr: '10'))
        ansiColor('xterm')
        timestamps()
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Set Version') {
            steps {
                script {
                    env.VERSION = sh(script: "mvn help:evaluate -Dexpression=project.version -q -DforceStdout", returnStdout: true).trim()
                    echo "Resolved version: ${env.VERSION}"
                }
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile -B -V'
            }
        }

        stage('Unit Tests') {
            steps {
                sh 'mvn test -B'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                    publishHTML(target: [
                        reportDir: 'target/surefire-reports',
                        reportFiles: 'index.html',
                        reportName: 'Unit Test Report'
                    ])
                }
            }
        }

        stage('Integration Tests') {
            steps {
                sh 'mvn verify -B -DskipUnitTests=false'
            }
            post {
                always {
                    junit '**/target/failsafe-reports/*.xml'
                    publishHTML(target: [
                        reportDir: 'target/failsafe-reports',
                        reportFiles: 'index.html',
                        reportName: 'Integration Test Report'
                    ])
                }
            }
        }

        stage('Code Coverage') {
            steps {
                sh 'mvn jacoco:report -B'
            }
            post {
                always {
                    jacoco(
                        execPattern: 'target/*.exec',
                        classPattern: 'target/classes',
                        sourcePattern: 'src/main/java',
                        exclusionPattern: ''
                    )
                }
            }
        }

        stage('Static Analysis (Sonar)') {
            when {
                branch 'main'
            }
            steps {
                withSonarQubeEnv('SonarCloud') {
                    sh """
                      mvn sonar:sonar \
                        -Dsonar.projectKey=duty-free-backend \
                        -Dsonar.organization=djbc \
                        -Dsonar.host.url=${SONAR_HOST_URL} \
                        -Dsonar.login=${SONAR_TOKEN}
                    """
                }
            }
        }

        stage('Quality Gate') {
            when {
                branch 'main'
            }
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Security Scans') {
            parallel {
                stage('Dependency Check (plugin)') {
                    steps {
                        script {
                            // If you have the OWASP Dependency Check plugin installed:
                            dependencyCheck additionalArguments: '''
                                --scan .
                                --format XML
                                --out dependency-check-report.xml
                                --project duty-free-backend
                            ''', odcInstallation: env.ODC_INSTALL
                        }
                    }
                    post {
                        always {
                            dependencyCheckPublisher pattern: '**/dependency-check-report.xml'
                            archiveArtifacts artifacts: 'dependency-check-report.xml', allowEmptyArchive: true
                        }
                    }
                }

                stage('Trivy (image & fs scan)') {
                    steps {
                        script {
                            // Filesystem scan (source code) - non-fatal (exit 0)
                            sh 'docker run --rm -v "$PWD":/project -w /project aquasec/trivy:latest fs --exit-code 0 --no-progress . || true'
                            // If Docker engine available, build image and run trivy on it
                            sh "docker build -t ${DOCKER_IMAGE}:scan-temp ."
                            sh "docker run --rm -v /var/run/docker.sock:/var/run/docker.sock aquasec/trivy:latest image --exit-code 1 --no-progress ${DOCKER_IMAGE}:scan-temp || true"
                        }
                    }
                }

                stage('Dockerfile Lint (hadolint)') {
                    steps {
                        sh 'docker run --rm -i hadolint/hadolint < Dockerfile || true'
                    }
                }
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package -DskipTests -B'
            }
            post {
                success {
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }

        stage('Docker Build & Push') {
            when {
                anyOf {
                    branch 'main'
                    branch 'develop'
                }
            }
            steps {
                script {
                    def tag = env.BRANCH_NAME == 'main' ? env.VERSION : "${env.VERSION}-${env.BUILD_NUMBER}"
                    docker.withRegistry("https://${DOCKER_REGISTRY}", env.DOCKER_CREDENTIALS_ID) {
                        def built = docker.build("${DOCKER_IMAGE}:${tag}")
                        built.push()
                        if (env.BRANCH_NAME == 'main') {
                            // push latest tag as well
                            docker.image("${DOCKER_IMAGE}:${tag}").tag('latest')
                            docker.image("${DOCKER_IMAGE}:${tag}").push('latest')
                        }
                        // cleanup temporary image
                        sh "docker rmi ${DOCKER_IMAGE}:${tag} || true"
                    }
                }
            }
        }

        stage('Deploy to Staging') {
            when {
                branch 'develop'
            }
            steps {
                script {
                    sshagent([env.SSH_STAGING_CRED]) {
                        sh '''
                            ssh -o StrictHostKeyChecking=no staging@staging.dutyfree.com << 'EOF'
                                set -e
                                cd /opt/duty-free-backend || exit 1
                                git pull origin develop
                                docker-compose pull
                                docker-compose up -d
                                sleep 10
                                curl -f http://localhost:8080/actuator/health || exit 1
                            EOF
                        '''
                    }
                }
            }
        }

        stage('Deploy to Production') {
            when {
                branch 'main'
            }
            steps {
                input message: 'Deploy to Production?', ok: 'Deploy'
                script {
                    sshagent([env.SSH_PROD_CRED]) {
                        sh '''
                            ssh -o StrictHostKeyChecking=no prod@dutyfree.com << 'EOF'
                                set -e
                                cd /opt/duty-free-backend || exit 1
                                ./backup.sh || true
                                git pull origin main
                                ./deploy.sh
                            EOF
                        '''
                    }
                }
            }
        }

        stage('Post-Deployment Tests') {
            when {
                anyOf {
                    branch 'main'
                    branch 'develop'
                }
            }
            parallel {
                stage('Smoke Tests') {
                    steps {
                        script {
                            def targetUrl = env.BRANCH_NAME == 'main' ? 'https://dutyfree.com' : 'https://staging.dutyfree.com'
                            sh "curl -f ${targetUrl}/actuator/health || exit 1"
                            sh "curl -f ${targetUrl}/actuator/metrics || exit 1"
                        }
                    }
                }
                stage('Performance Tests (k6)') {
                    steps {
                        script {
                            def targetUrl = env.BRANCH_NAME == 'main' ? 'https://dutyfree.com' : 'https://staging.dutyfree.com'
                            sh "docker run --rm -v $PWD:/scripts loadimpact/k6 run /scripts/performance-tests/load-test.js -e TARGET_URL=${targetUrl} --summary-export=k6-summary.json || true"
                        }
                    }
                    post {
                        always {
                            archiveArtifacts artifacts: 'k6-summary.json', fingerprint: true, allowEmptyArchive: true
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            script {
                def totalTests = currentBuild.rawBuild.getAction(hudson.tasks.junit.TestResultAction.class)?.totalCount ?: 'N/A'
                def coverage = currentBuild.rawBuild.getAction(hudson.plugins.jacoco.JacocoBuildAction.class)?.percentage ?: 'N/A'
                def message = """
                    :white_check_mark: *Build Successful*
                    *Job:* ${env.JOB_NAME} #${env.BUILD_NUMBER}
                    *Branch:* ${env.BRANCH_NAME}
                    *Duration:* ${currentBuild.durationString}
                    *Test Results:* ${totalTests} tests run
                    *Coverage:* ${coverage}%
                    <${env.BUILD_URL}|View Build Details>
                """
                slackSend(color: 'good', message: message)
            }
        }
        failure {
            script {
                def message = """
                    :x: *Build Failed*
                    *Job:* ${env.JOB_NAME} #${env.BUILD_NUMBER}
                    *Branch:* ${env.BRANCH_NAME}
                    *Duration:* ${currentBuild.durationString}
                    <${env.BUILD_URL}|View Build Details>
                    <${env.BUILD_URL}console|View Console Output>
                """
                slackSend(color: 'danger', message: message)
            }
        }
        unstable {
            script {
                slackSend(color: 'warning', message: ":warning: Build unstable: ${env.JOB_NAME} #${env.BUILD_NUMBER}")
            }
        }
    }
}
